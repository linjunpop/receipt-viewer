<div class="row">
  <div class="col-lg-12">
    <%= form_for @conn, decode_path(@conn, :create), fn f -> %>
      <div class="form-group">
        <textarea name="receipt" class="form-control" rows="12" autocapitalize="none" autocomplete="off" autofocus="true" required="required" spellcheck="false"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Decode receipt</button>
    <% end %>
  </div>
</div>
